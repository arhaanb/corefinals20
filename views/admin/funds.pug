extends ../layout

block content
	.container
		if success_msg
			h1= success_msg
		.flex-center
			.seven.columns
				form(action="/admin/funds" method="post")
					label.edit(for="") School
					select(name="school")
						each user in users
							option(value=user.username)= user.school
					label.edit(for="") Add
					input(type="number" name="funds" required)
					label.edit(for="") Reason
					input(type="text" name="reason" required)
					.flex-center
						button.button-primary.save.cool(type="submit") Save details